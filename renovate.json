{
  "extends": ["config:base"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "minor": {
    "automerge": true
  },
  "separateMultipleMajor": true,
  "node": {
    "supportPolicy": ["active"]
  },
  "labels": ["dependencies", "renovate"],
  "prCreation": "not-pending",
  "stabilityDays": 3,
  "prHourlyLimit": 5,
  "prConcurrentLimit": 2,
  "rebaseStalePrs": true
}
